#include <iostream>
#include <string>
using namespace std;

int main ()
{
	int x;
	cout << "Diga um valor pra x: ";
	cin >> x;
	

	switch (x) {
		case 1:
			cout << "x is 1";
			break;
		case 2:
			cout << "x is 2";
			break;
		case 3:
			cout << "x is 3";
			break;
		default:
			cout << "value of x unknown";
	                cout << " O valor de x Ã© : "<<x+1;		
		
	}
}
